extends layout

block content
  h1 Login
  form(method='POST', action='/users/login')
    #form-group
      label Username or Email:
      input.form-control(name='username',type='text')
    #form-group
      label Password:
      input.form-control(name='password',type='password')
    br
    input.btn.btn-outline-success(type='submit',value='Submit')
    br 
    br
    a.btn.btn-primary(href='/users/login/facebook')
      i.fab.fa-facebook-f 
      span(style='margin-left: 5px') Continue via Facebook
         

      
